<div class="container form" style="margin-bottom: 40px;">

  <div class="row">

    <div class="col-md-6 mx-auto">

      <h2 style="margin-bottom: 5px;">Login</h2>
      <br>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" }, placeholder: "Email", label: false %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" }, placeholder: "Password", label: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-warning" %>
            </div>
          <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
