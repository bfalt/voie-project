  <li class="nav-item">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#My-Job-Listings" role="tab" aria-controls="pills-home" aria-selected="true">My Job Listings</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="pill" href="#Jobs-In-Progress" role="tab" aria-controls="pills-profile" aria-selected="false">Jobs in Progress</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#Past-Jobs" data-toggle="pill" role="tab" aria-controls="pills-contact" aria-selected="false">My Past Jobs</a>
