<div class="row" style="margin-right: 15px;">
  <div class="d-flex flex-column col-sm-2" style="margin-left: 15px; background-color: #383838; color: grey; height: 100vh; position: sticky; top: 0;">

      <%= link_to "My Dashboard", user_dashboard_path, class: "p-2 text-center mx-2 dashboard-link active", :style => "margin-top: 35px;" %>
      <%= link_to "My Job Listings", user_dashboard_path, class: "p-2 text-center mx-2 dashboard-link" %>
      <%= link_to "Jobs in progress", user_dashboard_path, class: "p-2 text-center mx-2 dashboard-link" %>
      <%= link_to "Completed jobs", user_dashboard_path, class: "p-2 text-center mx-2 dashboard-link" %>
      <%= link_to "Meeting", user_dashboard_path, class: "p-2 text-center mx-2 dashboard-link" %>
      <%= link_to "Messages", user_dashboard_path, class: "p-2 text-center mx-2 dashboard-link" %>
      <%= link_to "My Job Listings", user_dashboard_path, class: "p-2 text-center mx-2 dashboard-link" %>

    <%= link_to "Getting Started", services_path, class: 'p-1 btn btn-warning m-3', :style => "-webkit-box-shadow: 0px 0px 8px -2px rgba(0,0,0,0.75);
-moz-box-shadow: 0px 0px 8px -2px rgba(0,0,0,0.75);
box-shadow: 0px 0px 8px -2px rgba(0,0,0,0.75);" %>
  </div>


  <div class="align-items-start col-md-9">
      <div style="height: 110px; margin: 60px;">

        <h2 style="margin-bottom: 20px;"><span style="color: #383838;">Welcome back </span> <strong><%= current_user.first_name %>!</strong></h2>
        <p>You just recieved 6 new offers <%= link_to "View Offers", user_dashboard_path, class: "btn btn-warning", :style => "margin: 10px; -webkit-box-shadow: 0px 0px 8px -2px rgba(194,194,194,1);
          -moz-box-shadow: 0px 0px 8px -2px rgba(194,194,194,1);
          box-shadow: 0px 0px 8px -2px rgba(194,194,194,1);" %></p>
      </div>

      <div class="container-fluid">
        <% @job_listings.each do |job_listing| %>
          <%= render "shared/new_offer_listing_card", job_listing: job_listing %>
        <% end %>
      </div>

  </div>

</div>

